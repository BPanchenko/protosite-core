{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2023"],
    "module": "ES2020",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "assets",
    "paths": {
      "#element/*": ["./source/element/*"],
      "#library/*": ["./source/library/*"],
      "#types": ["./source/types/index.d"],
      "#types/*": ["./source/types/*"],
      "#uikit/*": ["./node_modules/@bpanchenko/uikit/assets/*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "include": ["source/**/*"]
}
