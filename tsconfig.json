{
  "compileOnSave": true,
  "compilerOptions": {
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "assets",
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2020",
    "paths": {
      "#library/*": ["./src/lib/*"],
      "#types/*": ["./src/types/*"]
    }
  },
  "exclude": ["node_modules", "assets"],
  "include": ["src/**/*"],
  "moduleResolution": "nodenext"
}
