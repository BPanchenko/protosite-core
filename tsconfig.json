{
  "compileOnSave": true,
  "compilerOptions": {
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "assets",
    "paths": {
      "#element/*": ["./src/element/*"],
      "#library/*": ["./src/lib/*"],
      "#types/*": ["./src/types/*"]
    },
    "removeComments": true,
    "target": "ES2020",
    "lib": ["ES2021"]
  },
  "exclude": ["node_modules", "assets"],
  "include": ["src/**/*"],
  "moduleResolution": "nodenext"
}
