{
  "compileOnSave": true,
  "compilerOptions": {
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "assets",
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6"
  },
  "exclude": ["node_modules", "assets"],
  "include": ["src/**/*"],
  "moduleResolution": "nodenext"
}
