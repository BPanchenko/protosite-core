{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "ES6",
    "sourceMap": true,
    "target": "ES6",
    "outDir": "esm",
    "types": ["jest", "jest-image-snapshot"],
    "lib": ["ES2022", "DOM"]
  },
  "display": "Recommended",
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules/**"]
}
