{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "lib": ["ES2021"],
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "assets",
    "paths": {
      "#element/*": ["./source/element/*"],
      "#library/*": ["./source/library/*"],
      "#types/*": ["./source/types/*"],
      "#uikit/*": ["./node_modules/@bpanchenko/uikit/assets/*"]
    },
    "removeComments": true,
    "target": "ES2020"
  },
  "exclude": ["node_modules", "assets"],
  "include": ["source/**/*", "index.js"],
  "moduleResolution": "nodenext"
}
