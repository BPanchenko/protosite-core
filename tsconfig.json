{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "ES6",
    "sourceMap": true,
    "target": "ES2022",
    "outDir": "assets",
    "types": ["jest"],
    "lib": ["ES2022", "DOM"]
  },
  "display": "Recommended",
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**/*.ts"]
}
