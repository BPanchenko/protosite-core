{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "@types",
    "emitDeclarationOnly": true,
    "lib": ["DOM", "ES2023"],
    "module": "ES2020",
    "moduleResolution": "bundler",
    "paths": {
      "#element/*": ["./source/element/*"],
      "#library/*": ["./source/library/*"],
      "#type/*": ["./@types/*"],
      "#uikit/*": ["./node_modules/@bpanchenko/uikit/assets/*"]
    },
    "rootDir": ".",
    "target": "ES2020"
  },
  "include": ["./source/component/**/*.d.ts", "./source/element/**/*.d.ts"]
}
