{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "outDir": "assets",
    "paths": {
      "#element/*": ["./source/element/*"],
      "#library/*": ["./source/library/*"],
      "#type/*": ["./@types/*"],
      "#uikit/*": ["./node_modules/@bpanchenko/uikit/assets/*"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2022"
  },
  "include": ["./.kernel/**/*", "./@types/*", "./assets/**/*", "./source/**/*"]
}
